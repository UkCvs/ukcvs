#!/bin/sh
# miniops - Cable Ferret Project - 27 Oct 2014

# miniops requests:
case "$1" in

# Softcam(s) start
start)
	if [ -e $etc/.oscam ]; then
		rdate -s time.mit.edu
		sleep 1
		oscam &
		{ sleep 5; pzapit -rz; } &
	fi

	if [ -e $etc/.mgcamd ]; then
		epg-pause >/dev/null 2>&1
		{ sleep 5; mgcamd; } &
	fi

	if [ -e $etc/.evocamd ]; then
		evocamd &
	fi

	if [ -e $etc/.newcamd ]; then
		newcamd &
	fi

	if [ -e $etc/.cccam ]; then
		epg-restart >/dev/null 2>&1
		{ sleep 5; CCcam; } &
	fi
	exit 0
;;

# Softcam(s) stop
stop)
	if [ -e $etc/.oscam ]; then
		touch /tmp/oscam.kill
		killall -9 oscam
	fi
	
	if [ -e $etc/.mgcamd ]; then
		killall -9 mgcamd
		killall -9 epg-pause
	fi

	if [ -e $etc/.evocamd ]; then
		kill $( pidof evocamd )
		killall -9 evocamd
	fi

	if [ -e $etc/.newcamd ]; then
		kill $( cat /tmp/newcamd.pid )
		killall -9 newcamd
	fi

	if [ -e $etc/.cccam ]; then
		killall -9 CCcam
		killall -9 epg-restart
	fi
	exit 0
;;
esac

exit 0
